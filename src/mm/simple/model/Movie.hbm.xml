<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="mm.simple.model.Movie" table="Movie" catalog="movietest">
        <id name="movie_id" type="java.lang.Long">
            <column name="movie_id" />
            <generator class="identity" />
        </id>
        
        <property name="nameOrig" type="string">
            <column name="nameOrig" length="20" not-null="true" unique="true" />
        </property>
        
		<property name="nameCz" type="string">
            <column name="nameCz" length="20" not-null="true" unique="true" />
        </property>

		<property name="nameSk" type="string">
            <column name="nameSk" length="20" not-null="true" unique="true" />
        </property>
        
		<property name="descriptionEn" type="string">
            <column name="descriptionEn" length="20" not-null="true" unique="true" />
        </property>
		<property name="descriptionCz" type="string">
            <column name="descriptionCz" length="20" not-null="true" unique="true" />
        </property>

		<property name="descriptionSk" type="string">
            <column name="descriptionSk" length="20" not-null="true" unique="true" />
        </property>
        
		<property name="csfdUrl" type="string">
            <column name="csfdUrl" length="20" not-null="true" unique="true" />
        </property>
        
		<property name="year" type="int">
            <column name="year" length="20" not-null="true" />
        </property>
        
		<property name="trailerUrl" type="string">
            <column name="trailerUrl" length="20" not-null="true" unique="true" />
        </property> 
               
        <property name="lenghtMin" type="int">
            <column name="lenghtMin" length="20" not-null="true" />
        </property>
        <property name="csfdId" type="int">
            <column name="csfdId" length="20" not-null="true" unique="true" />
        </property>
        
        <property name="imdbId" type="string">
            <column name="imdbId" length="20" not-null="true" unique="true" />
        </property>
        
        <property name="imdbRating" type="float">
            <column name="imdbRating" length="20" not-null="true" unique="true" />
        </property>
        
        <property name="popularity" type="date">
            <column name="popularity" length="20" not-null="true" unique="true" />
        </property>
             
        <set name="countries" table="MapMovieCountry" 
        	inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="movie_id" not-null="true" />
            </key>
            <many-to-many entity-name="mm.simple.model.Country">
                <column name="country_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>

