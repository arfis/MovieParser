<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="mm.simple.model.Country" table="Country" catalog="movietest">
        <id name="country_id" type="java.lang.Long">
            <column name="country_id" />
            <generator class="identity" />
        </id>
        
        <property name="nameEn" type="string">
            <column name="nameEn" length="20" not-null="true" unique="true" />
        </property>
        
		<property name="nameCz" type="string">
            <column name="nameCz" length="20" not-null="true" unique="true" />
        </property>

		<property name="nameSk" type="string">
            <column name="nameSk" length="20" not-null="true" unique="true" />
        </property>
        
        <property name="iso_639_1" type="string">
            <column name="iso_639_1" length="20" not-null="true" unique="true" />
        </property>
      
            <set name="movies" table="MapMovieCountry" 
        	inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="country_id" not-null="true" />
            </key>
            <many-to-many entity-name="mm.simple.model.Movie">
                <column name="movie_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>